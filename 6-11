#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>
int main(void)
{
	int i, j, min,t;
	int number=0, ch[5], math[5], total[5];
	
	

	for (int i = 0; i <= 4; i++) {
	
		printf("輸入編號 %d 學生的國文成績:",i+1);
		scanf("%d", &ch[i]);
		printf("輸入編號 %d 學生的數學成績:",i+1);
		scanf("%d", &math[i]);
		total[i] = math[i] + ch[i];
		

	}

	

	for (i = 5; i > 0; i--) {
		min = i;
		for (j = i ; j >=0; j--)
			if (ch[min] > ch[j]) min = j;
		t = ch[min]; ch[min] = ch[i]; ch[i] = t;
		
	}
	for (i = 5; i > 0; i--) {
		min = i;
		for (j = i; j >= 0; j--)
			if (math[min] > math[j]) min = j;
		t =math[min]; math[min] = math[i]; math[i] = t;

	}

	for (i = 5; i > 0; i--) {
		min = i;
		for (j = i; j >= 0; j--)
			if (total[min] > total[j]) min = j;
		t = total[min]; total[min] =total[i]; total[i] = t;
		
		

	}
	


	printf("編號 國文 數學 總分\n");
	
	for(int i=0;i<5;i++){
		printf("%3d", number);
		printf("%5d %4d %4d", ch[i], math[i], total[i]);
		printf("\n");

	}
	
	system("pause"); return(0);
}
